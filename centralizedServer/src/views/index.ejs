<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Pruebas de carga</title>
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
     <div class="container">
          <h1 class="text-center text-primary mt-3">PRUEBA DE CARGA</h1>
          <div class="row mt-4">
               <div class="col-md-3"><h1></h1></div>
               <div class="col-md-6">
                    <div class="card">
                         <div class="card-header">
                              <h4 class="text-info text-center">PALÍNDROMA</h4>
                              <p class="text-center">Evaluación cadenas palíndromas</p>
                         </div>
                         <div class="card-body text-center">
                              <form action="/sendReq" method="POST">
                                   <div class="form-row">
                                     <div class="col">
                                       <input type="text" placeholder="Ingresa la palabra o frase" name="word" class="form-control"{{suma1}}>
                                     </div>
                                     
                                     <button class="btn btn-primary btn-block mt-3" type="submit">DETERMINAR SI ES PALÍNDROMA</button>
                                   </div>
                              </form>
                         </div>
                         <div class="card-footer text-center">
                                   <h5><%= resultPalindrome %> </h5>
                         </div>
                    </div>
               </div>
          </div>
          <br>
          <br>
          <br>
          <table class="table table-bordered table-hover">
               <div class="card-header">
                    <h2 class="text-info text-center">LOGS DE PUNTOS CRÍTICOS</h2>
               </div>
               <thead>
                    <tr>
                         <th>N°</th>
                         <th>Date</th>
                         <th>Host</th>
                         <th>Time Response (ms)</th>
                         <th>State</th>
                         <th>Type</th>
                    </tr>
               </thead>
               <tbody>
                    <% for(var i = 0; i < listLogs.length; i++){ %> 
                         <tr>
                              <td><%- i +1 %> </td>
                              <td><%= listLogs[i].date %> </td>
                              <td><%= listLogs[i].server %> </td>
                              <td><%= listLogs[i].timeResponse %> </td>
                              <td><%= listLogs[i].code %> </td>
                              <td><%= listLogs[i].level %> </td>
                         </tr>
                    <% } %> 
               </tbody>
          </table>
     </div>

     <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>