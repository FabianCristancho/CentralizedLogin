<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Pruebas de carga</title>
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
     <div class="container">
          <h1 class="text-center text-primary mt-3">PRUEBA DE CARGA</h1>
          <div class="row mt-4">
               <div class="col-md-6">
                    <div class="card">
                         <div class="card-header">
                              <h4 class="text-info text-center">SERVIDOR 1</h4>
                              <p class="text-center">192.168.100.136</p>
                         </div>
                         <div class="card-body text-center">
                              <img src="https://static.vecteezy.com/system/resources/previews/000/337/165/non_2x/vector-server-icon.jpg" alt="server 2" class="img-fluid" width="200">
                         </div>
                         <div class="card-footer">
                              <form action="/sendReq" method="POST">
                                   <button class="btn btn-primary btn-block" type="submit">HACER PETICIÓN</button>
                              </form>
                         </div>
                    </div>
               </div>
               <div class="col-md-6">
                    <div class="card">
                         <div class="card-header">
                              <h4 class="text-info text-center">SERVIDOR 2</h4>
                              <p class="text-center">192.168.100.161</p>
                         </div>
                         <div class="card-body text-center">
                              <img src="https://static.vecteezy.com/system/resources/previews/000/337/165/non_2x/vector-server-icon.jpg" alt="server 2" class="img-fluid" width="200">
                         </div>
                         <div class="card-footer">
                              <form action="/2" method="POST">
                                   <button class="btn btn-primary btn-block" type="submit">HACER PETICIÓN</button>
                              </form>
                         </div>
                    </div>
               </div>
          </div>
          <br>
          <table class="table table-bordered table-hover">
               <div class="card-header">
                    <h2 class="text-info text-center">LOGS DE PUNTOS CRÍTICOS</h2>
               </div>
               <thead>
                    <tr>
                         <th>N°</th>
                         <th>Fecha</th>
                         <th>Servidor</th>
                         <th>Tiempo de Respuesta</th>
                         <th>Estado</th>
                    </tr>
               </thead>
               <tbody>
                    <% for(var i = 0; i < listLogs.length; i++){ %> 
                         <tr>
                              <td><%- i +1 %> </td>
                              <td><%= listLogs[i].date %> </td>
                              <td><%= listLogs[i].server %> </td>
                              <td><%= listLogs[i].timeResponse %> </td>
                              <td><%= listLogs[i].status %> </td>
                         </tr>
                    <% } %> 
               </tbody>
          </table>
     </div>

     <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>